extend layout

block content
    h1 Add Livestock Details
    
    form(method='POST', action= '/articles/add')
      #form-group
        label Owner ID
        input.form-control(name='ownerid', type='text')
      #form-group
        label Owner Name
        input.form-control(name='ownername', type='text')
      #form-group
        label Animal ID
        input.form-control(name='animalid', type='text')
      #form-group
        label Animal Type
        input.form-control(name='animaltype', type='text')
      #form-group
        label Birth Date
        input.form-control(name='birthdate', type='text')
      #form-group
        label Place
        input.form-control(name='place', type='text')
      #form-group
        label Is the animal insured
        br
        label Yes
        input(type='radio', value='true', name='insurance')
        br
        label No
        input(type='radio', value='false', name='insurance')
      #form-group
        label Insurance No
        input.form-control(name='insuranceno', type='text')
      #form-group
        label Is the animal alive
        br
        label Yes 
        input(type='radio', value='true', name='insurance')
        br
        label No 
        input(type='radio', value='false', name='insurance')
      #form-group
        label Death Date
        input.form-control(name='deathdate', type='text')
      #form-group
        label Death Reason
        input.form-control(name='deathreason', type='text')
      //- #form-group
      //-   label Body
      //-   textarea.form-control(name='body')
      input.btn.btn-primary(type='submit', value='submit')
